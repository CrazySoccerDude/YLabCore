{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "device_lcr-state-shadow",
  "description": "LCR 设备影子对象，保留最新状态。",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "state",
    "device_id",
    "timestamp"
  ],
  "properties": {
    "device_id": {
      "type": "string",
      "minLength": 1
    },
    "state": {
      "type": "string",
      "enum": [
        "INIT",
        "IDLE",
        "BUSY",
        "ERROR",
        "RECOVERING",
        "OFFLINE"
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "last_command": {
      "type": "string"
    },
    "corr_id": {
      "type": "string"
    },
    "online": {
      "type": "boolean"
    },
    "health": {
      "type": "string",
      "enum": [
        "OK",
        "WARN",
        "ERROR"
      ]
    },
    "metadata": {
      "type": "object"
    }
  }
}
