{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "device_lcr-event-sweep-progress",
  "description": "LCR 仪器扫频进度事件。",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event",
    "corr_id",
    "device_id",
    "timestamp",
    "progress",
    "points_completed",
    "points_total"
  ],
  "properties": {
    "event": {
      "type": "string",
      "const": "lcr.sweep_progress"
    },
    "corr_id": {
      "type": "string",
      "minLength": 1
    },
    "device_id": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "progress": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "points_completed": {
      "type": "integer",
      "minimum": 0
    },
    "points_total": {
      "type": "integer",
      "minimum": 1
    },
    "last_frequency_hz": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "metadata": {
      "type": "object"
    }
  }
}
