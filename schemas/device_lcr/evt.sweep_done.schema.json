{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "device_lcr-event-sweep-done",
  "description": "LCR 仪器扫频完成事件。",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event",
    "corr_id",
    "device_id",
    "timestamp",
    "points_total",
    "duration_s"
  ],
  "properties": {
    "event": {
      "type": "string",
      "const": "lcr.sweep_done"
    },
    "corr_id": {
      "type": "string",
      "minLength": 1
    },
    "device_id": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "points_total": {
      "type": "integer",
      "minimum": 1
    },
    "duration_s": {
      "type": "number",
      "minimum": 0
    },
    "metadata": {
      "type": "object"
    }
  }
}
