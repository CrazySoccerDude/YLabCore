{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "shared-event-error",
  "description": "统一错误事件结构。",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event",
    "device_id",
    "timestamp",
    "code",
    "message"
  ],
  "properties": {
    "event": {
      "type": "string",
      "const": "system.error"
    },
    "device_id": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "corr_id": {
      "type": "string"
    },
    "code": {
      "type": "string",
      "minLength": 1
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "severity": {
      "type": "string",
      "enum": [
        "INFO",
        "WARN",
        "ERROR"
      ]
    },
    "details": {
      "type": "object"
    }
  }
}
